{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "typeRoots": ["types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true},
  "exclude": [
    "coverage"
  ]
}
