<div class="define-item-type wrapper-hexabox item anarchy-asset-module {{#if system.inactive}}inactive{{/if}}" data-item-id="{{_id}}" data-item-type="assetModule">
  {{> "systems/mwd/templates/actor/character-enhanced/hexabox.hbs"}}
  <div class="content">
    <div class="asset-module-img">
      <div>
        {{#if img}}
        <img class="anarchy-img item-img" src="{{img}}" alt="{{name}}" data-tooltip="{{name}}" />
        {{/if}}
      </div>
      <div>
        <div class="item-controls">
          {{> 'systems/mwd/templates/common/item-control-activate.hbs'}}
          {{> 'systems/mwd/templates/common/item-controls.hbs'}}
        </div>
      </div>
    </div>
    <div class="asset-module-content">
      <label class="title">{{name}}</label>
    {{>'systems/mwd/templates/actor/character/description.hbs' description=system.description}}
    </div>
  </div>
  <div class="wrapper-hexabox level">
    {{> "systems/mwd/templates/actor/character-enhanced/hexabox.hbs"}}
    <div class="content">
      {{system.level}}
    </div>
  </div>
</div>
