<div
  class="section-story wrapper {{actorTabClosed actor._id 'story'}}">
  <h2 class="wrapper-hexabox" data-class="section-story">
    {{> "systems/mwd/templates/actor/character-enhanced/hexabox.hbs"}}
    <div class="content">
      {{localize 'ANARCHY.actor.tabs.biography'}}
    </div>
  </h2>
  <div
    class="section-story {{actorTabClosed actor._id 'story'}}">
    <div
      class="section-story {{actorTabClosed actor._id 'story'}}">
      {{#unless options.limited}}
      <div class="social-info">
        <div class="karma wrapper-hexabox">
          {{> "systems/mwd/templates/actor/character-enhanced/hexabox.hbs"}}
          <div class="content">
            <div class="title">
            {{localize 'ANARCHY.actor.counters.xp'}}
            </div>
              {{>
              "systems/mwd/templates/actor/character-enhanced/karma.hbs"}}
          </div>
        </div>
      </div>
      <div class="contacts">
        {{> "systems/mwd/templates/actor/character-enhanced/contacts.hbs"}}
      </div>
      {{/unless}}
      <div class="description">
        {{> 'systems/mwd/templates/actor/character-enhanced/description.hbs'}}
      </div>
      {{#unless options.limited}}
      <div class="gm-note">
        {{> 'systems/mwd/templates/actor/character-enhanced/gmnotes.hbs'}}
      </div>
      {{/unless}}
    </div>
  </div>
</div>
