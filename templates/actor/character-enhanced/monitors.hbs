                        {{> "systems/mwd/templates/monitors/edge-pool.hbs" code='grit'}}
                    </div>
                </div>
                <div class="edge wrapper-hexabox">
                    {{>
                    "systems/mwd/templates/actor/character-enhanced/hexabox.hbs"}}
                    <div class="content">
                        {{> "systems/mwd/templates/monitors/edge-pool.hbs" code='insight'}}
