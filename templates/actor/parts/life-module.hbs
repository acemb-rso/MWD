<div class="define-item-type item anarchy-life-module {{#if system.inactive}}inactive{{/if}}" data-item-id="{{_id}}" data-item-type="lifeModule">
  <img class="anarchy-img item-img" src="{{img}}" alt="{{name}}" data-tooltip="{{name}}" />
  <div class="life-module-content">
    <label class="item-title">{{name}}</label>
    {{> 'systems/mwd/templates/actor/character/description.hbs' description=system.description}}
  </div>
  <div class="item-controls">
    {{> 'systems/mwd/templates/common/item-control-activate.hbs'}}
    {{> 'systems/mwd/templates/common/item-controls.hbs'}}
  </div>
</div>
