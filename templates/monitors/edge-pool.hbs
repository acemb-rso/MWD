<div class="flexcol anarchy-monitor edge-pools">
  <h3 class="monitor-label">{{localize ANARCHY.actor.counters.edgePools.title}}</h3>
  <div class="edge-pool-grid">
    {{#each system.counters.edgePools as |pool key|}}
    <label class="edge-pool-entry" for="system.counters.edgePools.{{key}}.value">
      <span class="edge-pool-label">{{localize (concat 'ANARCHY.actor.counters.edgePools.' key)}}</span>
      <input type="number" name="system.counters.edgePools.{{key}}.value" value="{{pool.value}}" data-dtype="Number" min="0" />
    </label>
    {{/each}}
  </div>
</div>
